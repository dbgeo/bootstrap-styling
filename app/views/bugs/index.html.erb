<p id="notice"><%= notice %></p>

<h1>Bugs</h1>

<table class="table table-hover">
  <thead>
    <tr>

      <th class="w-25">Title</th>
      <th class="w-25">Description</th>
      <th class="w-25">Issue type</th>
      <th class="w-25">Priority</th>
      <th class="w-25">Status</th>
      <th class="w-25">Author</th>
    </tr>
  </thead>

  <tbody>
    <% @bugs.each do |bug| %>
      <tr>
        <td class="w-25"><%= bug.title %></td>
        <td class="w-25"><%= bug.description %></td>
        <td class="w-25"><%= bug.issue_type %></td>
        <td class="w-25"><%= bug.priority %></td>
        <td class="w-25"><%= bug.status %></td>
        <td class="w-25">
          <%= link_to bug, class: "btn btn-default btn-sm" do %>
          Show
        <% end %>
        <%= link_to edit_author_path(bug), class: "btn btn-default btn-sm" do %>
        Edit
      <% end %>
      <%= link_to bug, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger btn-sm" do %>
      Delete
    <% end %>
    </td>
  </tr>
<% end %>
</tbody>
</table>

<br>

<%= link_to 'New Bug', new_bug_path, :class => "btn btn-primary" %>
